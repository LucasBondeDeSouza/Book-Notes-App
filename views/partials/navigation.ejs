<div class="py-2 bg-white sticky-bottom d-lg-none border-top">
    <div class="container">
        <div class="d-flex align-items-center justify-content-around">
            <a href="/home" class="text-decoration-none text-reset">
                <i class="bi bi-house-door fs-3"></i>
            </a>

            <i class="bi bi-search fs-3"></i>

            <i class="bi bi-plus-square fs-3" data-bs-toggle="modal" data-bs-target="#newBookModal"
            data-bs-whatever="@mdo"></i>

            <i class="bi bi-people-fill fs-3" data-bs-toggle="offcanvas" data-bs-target="#offcanvas"></i>

            <% if (locals.userPicture) { %>
                <div class="viewProfile-picture">
                    <a href="/profile">
                        <img src="<%= locals.userPicture %>" alt="Profile Picture">
                    </a>
                </div>
            <% } else { %>
                <a href="/profile" class="text-decoration-none text-reset">
                    <i class="bi bi-person-circle fs-3"></i>
                </a>
            <% } %>
        </div>
    </div>
</div>