<div class="container min-vh-100">
    <h1 class="mb-3">Results for users: <%= username %></h1>
    <div class="row">
        <% if (listUser.length > 0) { %>
            <% for (let user of listUser) { %>
                <div class="col-12 col-md-6 col-lg-4 mb-3">
                    <div class="card p-4">
                        <div class="d-flex flex-column">
                            <form action="/viewProfile" method="get" class="user-form w-100">
                                <input type="hidden" name="userId" value="<%= user.id %>">
                                <div class="d-flex gap-3 cursor-pointer" onclick="this.closest('form').submit();">
                                    <% if (user.picture) { %>
                                        <div class="users-profile">
                                            <img src="<%= user.picture %>" alt="Profile Picture">
                                        </div>
                                    <% } else { %>
                                        <i class="bi bi-person-fill fs-2"></i>
                                    <% } %>
                                    <div class="d-flex flex-column">
                                        <h2>
                                            <% if (user.username.length > 14) { %>
                                                <%= user.username.slice(0, 14) %>...
                                            <% } else { %>
                                                <%= user.username %>
                                            <% } %>
                                        </h2>
                                        <p><%= user.book_count %> registered books</p>
                                    </div>
                                </div>
                            </form>

                            <!-- Botões para seguir/deixar de seguir -->
                            <div class="d-flex justify-content-between mt-2">
                                <% if (user.isFollowing) { %>
                                    <form action="/unfollow" method="post" class="w-100">
                                        <input type="hidden" name="userId" value="<%= user.id %>">
                                        <button type="submit" class="btn btn-secondary w-100">
                                            <i class="fas fa-user-check me-1"></i> Following
                                        </button>
                                    </form>
                                <% } else { %>
                                    <form action="/follow" method="post" class="w-100">
                                        <input type="hidden" name="userId" value="<%= user.id %>">
                                        <button type="submit" class="btn btn-primary w-100">
                                            <i class="fas fa-user-plus me-1"></i> Follow
                                        </button>
                                    </form>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>

            <!-- Controles de paginação -->
            <div class="container my-5">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <% if (currentPage > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="?username=<%= username %>&page=<%= currentPage - 1 %>" aria-label="Anterior">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Anterior</span>
                                </a>
                            </li>
                        <% } %>

                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                <a class="page-link" href="?username=<%= username %>&page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>

                        <% if (currentPage < totalPages) { %>
                            <li class="page-item">
                                <a class="page-link" href="?username=<%= username %>&page=<%= currentPage + 1 %>" aria-label="Próximo">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Próximo</span>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            </div>

        <% } else { %>
            <p class="text-center mt-5">User Not Found</p>
        <% } %>
    </div>
</div>