<div class="modal fade" id="newBookModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">New Book</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form action="/newBook" method="post" class="needs-validation py-2" novalidate>
                    <div class="mb-2">
                        <label for="title" class="col-form-label fs-5">Title</label>
                        <input type="text" name="title" class="form-control py-2" id="title" required />
                        <div class="invalid-feedback">
                            Please enter a title.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="notes" class="col-form-label fs-5">Notes</label>
                        <textarea class="form-control py-2" rows="4" id="notes" name="notes" required></textarea>
                        <div class="invalid-feedback">
                            Please enter a notes.
                        </div>
                    </div>

                    <button type="submit" class="btn btn-dark w-100 fw-bold fs-5">Add</button>
                </form>
            </div>
        </div>
    </div>
</div>