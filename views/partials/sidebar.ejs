<div class="offcanvas offcanvas-end custom-offcanvas" tabindex="-1" id="offcanvas" data-bs-keyboard="false" data-bs-backdrop="false">
    <div class="offcanvas-header">
        <h6 class="offcanvas-title d-inline d-lg-none">Follows</h6>
        <h3 class="offcanvas-title d-none d-lg-inline">Follows</h3>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="sidebar">
        <ul>
            <% if (followers.length > 0) { %>
                <% for (let user of followers) { %>
                    <li>
                        <a href='/viewProfile?userId=<%= user.id %>'>
                            <% if (user.picture) { %>
                                <div class="users-profile">
                                    <img src="<%= user.picture %>" alt="Profile Picture" class="profile-picture">
                                </div>
                            <% } else { %>
                                <i class="bi bi-person-fill fs-1"></i>
                            <% } %>
                            <p class="m-0 fw-bold"><%= user.username %></p>
                        </a>
                    </li>
                <% } %>
            <% } else { %>
                <p class="text-center">You don't follow anyone yet</p>
            <% } %>
        </ul>
    </div>
</div>